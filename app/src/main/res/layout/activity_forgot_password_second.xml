<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/drawable_background_gradient"
    android:fitsSystemWindows="true"
    tools:context=".Activities.ForgotPasswordSecondActivity">
    
    <include layout="@layout/custom_action_bar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="@dimen/dp_15"
        android:gravity="center_horizontal">
        
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step2"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_100"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/roboto" />
        
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_security_ques"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_40"
            android:fontFamily="@font/roboto" />
        
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtFirstQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13"
            android:fontFamily="@font/roboto" />
        
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editAnswer1RP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/security_answer"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/white_border_gradient"
            android:padding="@dimen/dp_10" />
        
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtSecondQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13"
            android:fontFamily="@font/roboto" />
        
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editAnswer2RP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/security_answer"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/white_border_gradient"
            android:padding="@dimen/dp_10" />
        
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmitStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/submit"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_50" />
    </LinearLayout>

</LinearLayout>