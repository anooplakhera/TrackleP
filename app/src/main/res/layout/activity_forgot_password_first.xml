<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_background_gradient"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".Activities.ForgotPasswordFirstActivity">

    <include layout="@layout/custom_action_bar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/drawable_round_corner"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:padding="@dimen/dp_15">

        <RelativeLayout
                android:id="@+id/r_lyt_utilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/white_border_gradient"
                android:padding="@dimen/dp_10">


            <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow" />

            <TextView
                    android:id="@+id/textUtilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/dp_2"
                    android:text="@string/select_waterdistrict"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                android:orientation="horizontal"
                android:weightSum="3">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/common_drop_image" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/step1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto" />

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/common_drop_image" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_40"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/validate_email"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editEmailF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border_gradient"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="@dimen/dp_10" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rounded_corner_blue"
                android:fontFamily="@font/roboto"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_18" />
    </LinearLayout>

</LinearLayout>