<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryl_conservationParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.ConservationActivity"
    android:orientation="vertical">
    
    <!--View CCF, Gallon, Dollar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytUsageTabs"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_4"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="View CCF" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_4"
            android:gravity="center"
            android:text="View Gallon" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_4"
            android:gravity="center"
            android:text="View Dollar" />
    </LinearLayout>
    
    <!--View CCF, Gallon, Dollar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:weightSum="4">
        
        <!--Hourly-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:weightSum="3">
            
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:text="Hourly" />
        
        </LinearLayout>
        
        <!--Daily-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:weightSum="3">
            
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:text="Daily" />
        
        </LinearLayout>
        
        <!--Monthly-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:weightSum="3">
            
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="View CCF" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:text="Monthly" />
        
        </LinearLayout>
        
        <!--BiMonthly-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:weightSum="3">
            
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="View CCF" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:text="Bi Monthly" />
        
        </LinearLayout>
    
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"></FrameLayout>
    
    <!--Highest & Lowest This Period-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/colorWhite">
        
        <!--Highest This Period-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">
            
            <TextView
                android:id="@+id/txtHighestThisPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highest_this_period"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dp_2"
                android:textColor="@color/colorAccent" />
            
            <TextView
                android:id="@+id/txtHighestThisPeriodValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_a"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dp_2"
                android:textColor="@color/colorLightBlack" />
        </LinearLayout>
        
        <!--Lowest This Period-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true">
            
            <TextView
                android:id="@+id/txtLowestThisPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lowest_this_period"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dp_2"
                android:textColor="@color/colorAccent" />
            
            <TextView
                android:id="@+id/txtLowestThisPeriodValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9 CCF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dp_2"
                android:textColor="@color/colorLightBlack" />
        
        </LinearLayout>
        
    </RelativeLayout>
    
    <TextView
        android:id="@+id/txtConservationTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conservation_tip3"
        android:layout_centerInParent="true" />
</LinearLayout>