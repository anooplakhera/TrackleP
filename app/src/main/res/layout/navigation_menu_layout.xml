<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray100"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dp_10"
                android:text="@string/nav_menu_1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

        <LinearLayout
                android:id="@+id/lytCompanyWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_company_website" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytPayLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_payment_location" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_3"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytVisitFb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_facebook" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_4"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytVisitTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_twitter" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_5"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_privacy_policy" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/menu_button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/nav_logout" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nav_menu_7"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6">

        <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="bottom"
                android:src="@drawable/logo1" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/dp_5"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/version"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/sp_10" />


    </LinearLayout>

</RelativeLayout>