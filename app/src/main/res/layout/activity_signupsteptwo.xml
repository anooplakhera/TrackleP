<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:layout_marginBottom="@dimen/dp_40"
    android:background="@drawable/drawable_background_gradient"
    tools:context=".Activities.SignupStepOneActivity">
    
    <include
        layout="@layout/custom_action_bar"
        android:id="@+id/lytAction" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_background_gradient"
        android:layout_above="@id/btnSubmitRegister"
        android:overScrollMode="never"
        android:layout_below="@id/lytAction">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:background="@drawable/drawable_round_corner"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center_horizontal">
            
            <RelativeLayout
                android:id="@+id/r_lyt_utility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2">
                
                <TextView
                    android:id="@+id/txtStep1header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_2"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/step_2_security_questions" />
            
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/colorLightGray100" />
            
            <RelativeLayout
                android:id="@+id/r_lyt_ques1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2">
                
                <TextView
                    android:id="@+id/txtQues1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/edittext_border"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorBlack"
                    android:text="@string/security_ques1" />
                
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />
            
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/colorLightGray100" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2">
                
                
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:hint="Enter Security Answer"
                    android:textSize="@dimen/sp_14"
                    android:gravity="start"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_4" />
            
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/colorLightGray100" />
            
            <RelativeLayout
                android:id="@+id/r_lyt_ques2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2">
                
                <TextView
                    android:id="@+id/txtQues2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/edittext_border"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:textColor="@color/colorBlack"
                    android:text="@string/security_ques2" />
                
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_alignParentRight="true" />
            
            
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/colorLightGray100" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2">
                
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:hint="@string/mandatory"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/dp_4" />
            
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/colorLightGray100" />
        </LinearLayout>
    
    </ScrollView>
    
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSubmitRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:text="@string/register_now"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_18"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>