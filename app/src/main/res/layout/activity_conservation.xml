<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryl_conservationParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.ConservationActivity">
    
    <ImageView
        android:id="@+id/imgConservationTipImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/billing_blue"
        android:layout_above="@+id/txtConservationTip" />
    
    <TextView
        android:id="@+id/txtConservationTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conservation_tip3"
        android:layout_centerInParent="true" />
</RelativeLayout>