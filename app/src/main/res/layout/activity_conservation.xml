<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryl_conservationParent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Activities.ConservationActivity">

    <include
        layout="@layout/custom_action_bar"
        android:id="@+id/lytAction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgConservationTipImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtConservationTip" />

        <TextView
            android:id="@+id/txtConservationTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold|italic"
            android:padding="@dimen/dp_4"
            android:fontFamily="@font/roboto"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>
