<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background_gradient"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activities.ConnectWithUtilityActivity">
    
    <include
        android:id="@+id/lytAction"
        layout="@layout/custom_action_bar" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">
            
            <!--connect_with_utility Header-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/txtContactUsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="@string/connect_with_utility"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_20" />
            </RelativeLayout>
            
            <!--connect_with_utility description-->
            <LinearLayout
                android:id="@+id/relBillingPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/drawable_round_corner"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                
                <TextView
                    android:id="@+id/txtContactUsDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/dp_2"
                    android:text="@string/contactus_description"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />
                
                <!--Trackle Logo Layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/common_drop_image" />
                    
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_60"
                        android:layout_weight="1"
                        android:src="@drawable/trackle_logo" />
                    
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/common_drop_image" />
                </LinearLayout>
                
                <TextView
                    android:id="@+id/txtContactUsDetailsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/dp_2"
                    android:text="Contact Us"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
                
                <!--<TextView
                    android:id="@+id/txtContactUsEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contactus_email"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/roboto"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp_2" />-->
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_email_" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2">
                        
                        <TextView
                            android:id="@+id/txtContactUsEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/email_address"
                            android:textColor="@color/commonLabelTextColor" />
                        
                        <TextView
                            android:id="@+id/txtContactUsEmailValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtContactUsEmail"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:textColor="@color/colorUsageAllocation"
                            android:textSize="@dimen/sp_14" />
                    
                    </RelativeLayout>
                </LinearLayout>
                
                <!--<TextView
                    android:id="@+id/txtContactUsPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contactus_phone"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/roboto"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp_2"
                    android:visibility="gone"/>-->
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_home_phone_" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2">
                        
                        <TextView
                            android:id="@+id/txtContactUsPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/phone_number"
                            android:textColor="@color/commonLabelTextColor" />
                        
                        <TextView
                            android:id="@+id/txtContactUsPhoneValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtContactUsPhone"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:textColor="@color/colorUsageAllocation"
                            android:textSize="@dimen/sp_14" />
                    
                    </RelativeLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_home_phone_" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2">
                        
                        <TextView
                            android:id="@+id/txtEmergencyNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/emergency_number"
                            android:textColor="@color/commonLabelTextColor" />
                        
                        <TextView
                            android:id="@+id/txtEmergencyNumberValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtEmergencyNumber"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:textColor="@color/colorUsageAllocation"
                            android:textSize="@dimen/sp_14" />
                    
                    </RelativeLayout>
                </LinearLayout>
                
                
                <!--<TextView
                    android:id="@+id/txtContactUsAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contactus_address"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/roboto"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp_2"
                    android:visibility="gone"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_hourly" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2">
                        
                        <TextView
                            android:id="@+id/txtCustomerServiceHour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/customer_service_hour"
                            android:textColor="@color/commonLabelTextColor" />
                        
                        <TextView
                            android:id="@+id/txtCustomerServiceHourValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtCustomerServiceHour"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14" />
                    
                    </RelativeLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_address_" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2">
                        
                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/connect_address"
                            android:textColor="@color/commonLabelTextColor" />
                        
                        <TextView
                            android:id="@+id/txtAddressValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtAddress"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14" />
                    
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/drawable_round_corner"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                
                <TextView
                    android:id="@+id/txtReportAnIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/report_an_issue"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
                
                <!--Customer Name-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="Customer Name"
                        android:textColor="@color/colorBlack" />
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtCustomerName"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/mandatory"
                        android:imeOptions="actionNext|flagNavigateNext"
                        android:maxLength="30"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14" />
                
                </RelativeLayout>
                
                <!--Service Account Number-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtServiceAccNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="Service Account Number"
                        android:textColor="@color/colorBlack" />
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editServiceAccNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtServiceAccNum"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/mandatory"
                        android:imeOptions="actionNext|flagNavigateNext"
                        android:maxLength="7"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14" />
                
                </RelativeLayout>
                
                <!--Customer Name-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtCustomerEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="Email"
                        android:textColor="@color/colorBlack" />
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editCustomerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtCustomerEmail"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/mandatory"
                        android:imeOptions="actionNext|flagNavigateNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14" />
                
                </RelativeLayout>
                
                <!--Report Type-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtTopic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="Report Type"
                        android:textColor="@color/colorBlack" />
                    
                    <RelativeLayout
                        android:id="@+id/r_lyt_utilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtTopic"
                        android:background="@drawable/edittext_border"
                        android:padding="@dimen/dp_2">
                        
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_right_arrow" />
                        
                        <TextView
                            android:id="@+id/txtTopicName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/dp_2"
                            android:text="@string/select_topic"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="@dimen/sp_16" />
                    
                    </RelativeLayout>
                
                </RelativeLayout>
                
                <!--Subject-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="@string/subject"
                        android:textColor="@color/colorBlack" />
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editSubjectValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtSubject"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/mandatory"
                        android:imeOptions="actionNext|flagNavigateNext"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14" />
                
                </RelativeLayout>
                
                <!--Message-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2">
                    
                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/dp_2"
                        android:text="Message"
                        android:textColor="@color/colorBlack" />
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editMessageValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtMessage"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/mandatory"
                        android:imeOptions="actionNext|flagNavigateNext"
                        android:maxLength="250"
                        android:maxLines="4"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14" />
                
                </RelativeLayout>
                
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConnectMeSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/rounded_corner_blue"
                    android:fontFamily="@font/roboto"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>