<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/drawable_background_gradient"
    tools:context=".Activities.ForgotPasswordFirstActivity">
    
    <include layout="@layout/custom_action_bar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:background="@drawable/drawable_round_corner"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:gravity="center_horizontal">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:weightSum="3">
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/common_drop_image" />
            
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/step3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorPrimary"
                app:fontFamily="@font/roboto" />
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/common_drop_image" />
        </LinearLayout>
        
        
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password_header"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_40"
            android:fontFamily="@font/roboto" />
        
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:maxLength="16"
            android:background="@drawable/white_border_gradient"
            android:padding="@dimen/dp_10" />
        
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:hint="@string/confirm_pass"
            android:layout_marginTop="@dimen/dp_40"
            android:fontFamily="@font/roboto"
            android:background="@drawable/white_border_gradient"
            android:padding="@dimen/dp_10" />
        
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmitStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/submit"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_50" />
    </LinearLayout>

</LinearLayout>